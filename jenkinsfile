pipeline {
    agent any

    environment {
        // Define the Docker image names and tags
        CLIENT_IMAGE = 'oumaymaii/soutenance-app-client-jenkins:latest'
        SERVER_IMAGE = 'oumaymaii/soutenance-app-server-jenkins:latest'
    }

    stages {
        stage('Deploy to Minikube') {
            steps {
                script {
                    // Apply Kubernetes deployment and service YAML files
                    sh 'kubectl apply -f kubernetes/deployment.yaml'
                    sh 'kubectl apply -f kubernetes/service.yaml'
                }
            }
        }
    }
}
